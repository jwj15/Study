<Page x:Class="EX1.BikeShop.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EX1.BikeShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu"
      Background="{StaticResource background}">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="#AA000000" Margin="10,10,0,0" />
                                <Ellipse Fill="{TemplateBinding Background}" Margin="0,0,10,10"/>
                                <Viewbox Margin="5,5,15,15">
                                    <ContentPresenter />
                                </Viewbox>
                            </Grid>
                        </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>    
    </Page.Resources>
    
    <Grid>
        <Button Content="Products" HorizontalAlignment="Left" Margin="125,55,0,0" VerticalAlignment="Top" Width="128" Height="96" Click="Button_Click_2"/>
        <Button Content="Live support" HorizontalAlignment="Left" Margin="335,55,0,0" VerticalAlignment="Top" Width="128" Height="96" Click="Button_Click_1"/>
        <Button Content="Email support" HorizontalAlignment="Left" Margin="554,55,0,0" VerticalAlignment="Top" Width="128" Height="96" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="128,238,0,0" TextWrapping="Wrap" Text="Adventure works" VerticalAlignment="Top" Height="137" Width="554" FontSize="24" FontStyle="Italic"/>
    </Grid>
</Page>
